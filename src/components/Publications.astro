---
// src/components/Publications.astro
import { siteConfig } from "../config";
const hasPublications =
  siteConfig.publications && siteConfig.publications.length > 0;
---

{
  hasPublications && (
    <section id="publications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Publications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8 space-y-8">
            {siteConfig.publications.map((pub) => (
              <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                  {pub.title}
                </h3>
                <p class="text-sm sm:text-base text-gray-600 mt-1">
                  {pub.authors}
                </p>
                <p
                  class="text-sm sm:text-base mt-1"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  {pub.venue} · {pub.year}
                </p>

                {pub.pdf && (
                  <a
                    href={pub.pdf}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline"
                    style={`color: ${siteConfig.accentColor}`}
                  >
                    PDF
                  </a>
                )}
                {pub.link && (
                  <a
                    href={pub.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-block mt-3 text-sm font-medium hover:underline"
                    style={`color: ${siteConfig.accentColor}`}
                  >
                    View Publication →
                  </a>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )
}
