---
import Section from '../ui/Section.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import Container from '../ui/Container.astro';

interface Award {
  name: string;
  org?: string;
  year: string;
  note?: string;
}

interface Props {
  items: Award[];
}

const { items } = Astro.props;
---

<Section id="awards">
  <Container>
    <SectionTitle
      title="Awards & Honors"
      subtitle="Recognition and achievements"
    />

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      {items.map((award) => (
        <div class="bg-gradient-to-br from-blue-50 to-purple-50 border border-blue-100 rounded-lg p-6 hover:shadow-lg transition-shadow duration-200">
          <div class="flex items-start justify-between mb-2">
            <h3 class="text-xl font-bold text-gray-900">
              {award.name}
            </h3>
            <span class="text-base font-medium text-blue-600 bg-blue-100 px-3 py-1 rounded">
              {award.year}
            </span>
          </div>
          {award.org && (
            <p class="text-lg text-gray-600 mb-2">
              {award.org}
            </p>
          )}
          {award.note && (
            <p class="text-base text-gray-500 italic">
              {award.note}
            </p>
          )}
        </div>
      ))}
    </div>
  </Container>
</Section>
