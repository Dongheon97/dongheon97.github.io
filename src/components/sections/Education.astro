---
import Section from "../ui/Section.astro";
import SectionTitle from "../ui/SectionTitle.astro";
import Container from "../ui/Container.astro";
import Card from "../ui/Card.astro";

interface EducationItem {
  school: string;
  degree: string;
  program?: string;
  start: string;
  end: string;
  bullets: string[];
}

interface Props {
  items: EducationItem[];
}

const { items } = Astro.props;
---

<Section id="education" class="bg-gray-50">
  <Container>
    <SectionTitle title="Education" subtitle="Academic background" />

    <div class="flex flex-col gap-8 max-w-full mx-auto">
      {
        items.map((item) => (
          <Card class="p-8 md:p-10 transform hover:-translate-y-1 transition-transform duration-300">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-6 gap-4">
              <div>
                <h3 class="text-2xl md:text-3xl font-bold text-blue-900 mb-2">
                  {item.school}
                </h3>
                <p class="text-xl md:text-2xl text-gray-600 font-bold">
                  {item.degree}
                </p>
                {item.location && (
                  <p class="text-lg text-gray-600 mt-1">{item.program}</p>
                )}
              </div>
              <div class="md:text-right flex-shrink-0">
                <span class="inline-block px-4 py-2 bg-gray-100 rounded-full text-gray-600 font-medium text-lg">
                  {item.start} â€“ {item.end}
                </span>
              </div>
            </div>

            <ul class="space-y-3 text-lg text-gray-700 leading-relaxed">
              {item.bullets.map((bullet) => (
                <li class="flex items-start">
                  <span class="mr-3 mt-2.5 w-1.5 h-1.5 bg-blue-400 rounded-full flex-shrink-0" />
                  <span>{bullet}</span>
                </li>
              ))}
            </ul>
          </Card>
        ))
      }
    </div>
  </Container>
</Section>
