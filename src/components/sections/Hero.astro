---
import Button from "../ui/Button.astro";
import Section from "../ui/Section.astro";
import Container from "../ui/Container.astro";

interface Props {
  name: string;
  role_title: string;
  one_liner: string;
  profile_image?: string;
  location?: string;
  links: {
    email: string;
    github: string;
    linkedin: string;
    scholar?: string;
    cv_pdf?: string;
  };
}

const { name, role_title, one_liner, profile_image, location, links } =
  Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<Section id="hero" class="min-h-screen flex items-center py-20">
  <Container>
    <div class="flex flex-col md:flex-row items-center gap-12 md:gap-20">
      <!-- Profile Image -->
      {
        profile_image && (
          <div class="w-64 h-64 md:w-96 md:h-96 flex-shrink-0 relative">
            <div class="absolute inset-0 bg-blue-600 rounded-full blur-3xl opacity-20 animate-pulse" />
            <img
              src={`${baseUrl}${profile_image}`}
              alt={name}
              class="w-full h-full object-cover rounded-full border-4 border-white shadow-2xl relative z-10"
            />
          </div>
        )
      }

      <!-- Content -->
      <div class="flex-1 text-center md:text-left space-y-8">
        <div>
          <h1
            class="text-6xl md:text-8xl font-bold text-gray-900 leading-tight mb-4"
          >
            {name}
          </h1>
          <p class="text-3xl md:text-4xl text-blue-600 font-bold mb-6">
            {role_title}
          </p>
          <p
            class="text-xl md:text-2xl text-gray-600 leading-relaxed max-w-2xl mx-auto md:mx-0"
          >
            {one_liner}
          </p>
          {
            location && (
              <p class="text-gray-500 mt-4 text-lg">üìç {location}</p>
            )
          }
        </div>

        <div
          class="flex flex-col sm:flex-row gap-6 justify-center md:justify-start items-center"
        >
          <Button href={`mailto:${links.email}`} variant="primary" class="text-lg px-8 py-4">
            ‚úâÔ∏è Get in Touch
          </Button>
          {
            links.cv_pdf && (
              <Button href={`${baseUrl}${links.cv_pdf}`} variant="secondary" class="text-lg px-8 py-4">
                üìÑ Download CV
              </Button>
            )
          }
        </div>

        <div
          class="flex gap-8 justify-center md:justify-start items-center pt-4"
        >
          <a
            href={links.github}
            class="text-gray-500 hover:text-gray-900 transition-transform hover:scale-110"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84-1.235 1.911-1.236 3.221 1.236 4.607 2.807 5.931 5.467 0 4.597-3.802 5.931-5.467 5.931-4.637 0-8.4-3.793-8.4-8.4 0-6.627 5.373-12 12-12z"
              ></path>
            </svg>
          </a>
          <a
            href={links.linkedin}
            class="text-gray-500 hover:text-gray-900 transition-transform hover:scale-110"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
          {
            links.scholar && (
              <a
                href={links.scholar}
                class="text-gray-500 hover:text-gray-900 transition-transform hover:scale-110"
                rel="noopener noreferrer"
                aria-label="Google Scholar"
              >
                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 24a7 7 0 1 1 0-14 7 7 0 0 1 0 14zm0-24L0 9.5l4.838 3.94A8 8 0 0 1 12 9a8 8 0 0 1 7.162 4.44L24 9.5 12 0z" />
                </svg>
              </a>
            )
          }
        </div>
      </div>
    </div>

    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block">
      <a href="#expertise" class="text-gray-400 hover:text-gray-600">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </Container>
</Section>
