---
import Container from "./Container.astro";

const navItems = [
  { name: "About", href: "#hero" },
  { name: "Projects", href: "#projects" },
  { name: "Experience", href: "#experience" },
  { name: "Education", href: "#education" },
  { name: "Publications", href: "#publications" }, // Contact usually in Hero or Footer, mapping to Hero for now as per common pattern or I can add a footer contact later. But prompt says "Contact". Let's assume it links to hero or a footer. Actually, usually "Get in Touch" is in Hero. I'll link to Hero.
];
const baseUrl = import.meta.env.BASE_URL;
---

<header
  id="navbar"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-transparent py-4"
>
  <Container>
    <nav class="flex items-center justify-between">
      <a href={baseUrl} class="text-xl md:text-2xl font-bold text-gray-900 relative">
        Dongheon Lee
      </a>

      <!-- Desktop Menu Only -->
      <div class="hidden md:flex items-center gap-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-lg font-medium text-gray-700 hover:text-blue-600 transition-colors"
            >
              {item.name}
            </a>
          ))
        }
        <div class="flex items-center gap-4 ml-4 border-l border-gray-200 pl-4">
          <a
            href="https://github.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-gray-900 transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84-1.235 1.911-1.236 3.221 1.236 4.607 2.807 5.931 5.467 0 4.597-3.802 5.931-5.467 5.931-4.637 0-8.4-3.793-8.4-8.4 0-6.627 5.373-12 12-12z"
              ></path>
            </svg>
          </a>
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-gray-900 transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>
  </Container>
</header>

<!-- Top Button -->
<button
  id="top-btn"
  class="fixed bottom-8 right-8 z-50 bg-blue-600 text-white p-4 rounded-full shadow-lg hover:bg-blue-700 transition-all duration-300 opacity-0 translate-y-4 pointer-events-none"
  aria-label="Scroll to top"
>
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.getElementById("navbar");
    const topBtn = document.getElementById("top-btn");

    // Handle scroll
    window.addEventListener("scroll", () => {
      if (window.scrollY > 20) {
        navbar?.classList.add("bg-white/80", "backdrop-blur-md", "shadow-sm", "py-2");
        navbar?.classList.remove("bg-transparent", "py-4");
        // Show top button
        topBtn?.classList.remove("opacity-0", "translate-y-4", "pointer-events-none");
        topBtn?.classList.add("opacity-100", "translate-y-0");
      } else {
        navbar?.classList.add("bg-transparent", "py-4");
        navbar?.classList.remove("bg-white/80", "backdrop-blur-md", "shadow-sm", "py-2");
        // Hide top button
        topBtn?.classList.add("opacity-0", "translate-y-4", "pointer-events-none");
        topBtn?.classList.remove("opacity-100", "translate-y-0");
      }
    });

    // Scroll to top
    topBtn?.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  });
</script>
