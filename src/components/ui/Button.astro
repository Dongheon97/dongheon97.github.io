---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  target?: string;
  rel?: string;
  class?: string;
}

const {
  href,
  variant = 'primary',
  target,
  rel = 'noopener noreferrer',
  class: className = ''
} = Astro.props;

const variantClasses = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700',
  secondary: 'bg-gray-100 text-gray-900 hover:bg-gray-200',
  ghost: 'text-gray-700 hover:text-gray-900'
};
---

<a
  href={href}
  target={target}
  rel={rel}
  class={`inline-flex items-center justify-center px-4 py-2 rounded-md font-medium transition-colors duration-200 ${variantClasses[variant]} ${className}`}
>
  <slot />
</a>
